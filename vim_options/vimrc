" Vundle
set nocompatible " required for Vundle
filetype off " required for Vundle

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" let Vundle manage Vundle, required
Plugin 'VundleVim/Vundle.vim'

" Plugins
" Many of these found at vimawesome.com
" Code Completion
" HTML, CSS, and JavaScript
Plugin 'mattn/emmet-vim'
" Code Linting
Plugin 'w0rp/ale'
" Code Commenting Out
Plugin 'scrooloose/nerdcommenter'
" Colors
Plugin 'dylanaraps/wal.vim'
" Editor Configurations
Plugin 'editorconfig/editorconfig-vim'
" File Tree View
Plugin 'scrooloose/nerdtree'
" File Finding
Plugin 'junegunn/fzf.vim'
" Hex Editing
Plugin 'fidian/hexmode'
" Git Additions
Plugin 'airblade/vim-gitgutter'
" LaTeX
Plugin 'lervag/vimtex'
" Multiple Cursors
Plugin 'terryma/vim-multiple-cursors'
" Utilities
Plugin 'tpope/vim-eunuch'

" All plugins must be added before the following line
call vundle#end() " required
filetype plugin indent on " required
" End Vundle

" Required since I have fzf installed in an unexpected place
source /opt/fzf/plugin/fzf.vim

" Variable Settings
" Colors
colorscheme wal
" Sets comments to be a noticeably different color.
set t_Co=256

" Line settings
set lbr
set number

" Spell Check
set spelllang=en
set spell

" Tab width
" On pressing tab, insert 2 spaces
set expandtab
" show existing tab with 2 spaces width
set tabstop=2
set softtabstop=2
" when indenting with '>', use 2 spaces width
set shiftwidth=2


" Tex
" Prevents vim from thinking a tex file is plaintex
let g:tex_flavor='latex'
let g:vimtex_view_method='zathura'

" Order and usage requested by vim-tex
filetype plugin indent on
syntax on

" Clipboard settings
set clipboard=unnamed

" End Variable Settings

" Non-Leader Key Mappings
" File Finding
noremap ; :Files<CR>
" Line Movements
nnoremap - ddp
nnoremap _ ddkkp
" Uppercase a word in different modes
inoremap <c-u> <esc>viwUi
nnoremap <c-u> viwU<esc>
" End Non-Leader Key Mappings

" Leader Key Mappings
let mapleader = ","
" Making it easier to make it easier to edit text
" Edit my Vimrc
:nnoremap <leader>ev :vsplit $MYVIMRC<cr>
" Source my Vimrc
:nnoremap <leader>sv :source $MYVIMRC<cr>
" Surrond the current word in quotes
:nnoremap <leader>' viw<esc>a'<esc>bi'<esc>lel
":vnoremap <leader>' `<<esc>a'<esc>`>i'<esc>
" Surrond the current word in double quotes
:nnoremap <leader>" viw<esc>a"<esc>bi"<esc>lel
" End Leader Key Mappings

" Local Leader Key Mappings
let maplocalleader = "\\"
" End Local Leader Key Mappings

" Abbreviations
" Emails
" Personal email
:iabbrev @@p tylerofthewest@gmail.com
" School email
:iabbrev @@s westlatr@mail.uc.edu
" Work email
:iabbrev @@w westlatr@mail.uc.edu

