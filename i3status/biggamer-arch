general {
  colors = true
  interval = 5
}

order += "volume master"
order += "read_file NOTIFICATIONS"
order += "ethernet _first_"
order += "path_exists NORDVPN"
order += "path_exists UC-VPN"
order += "disk /"
order += "disk /home"
order += "load"
order += "memory"
order += "tztime local"

volume master {
  format = "â™ª: %volume"
  format_muted = "â™ª: muted (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

read_file NOTIFICATIONS {
  format = "%title: on"
  format_bad = "%title: off"
  path = "/home/tyler/.config/dunst/is_unpaused"
}

ethernet _first_ {
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

path_exists NORDVPN {
  path = "/proc/sys/net/ipv4/conf/nordlynx"
}

path_exists UC-VPN {
  path = "/proc/sys/net/ipv4/conf/cscotun0"
}


